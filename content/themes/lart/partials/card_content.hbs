
{{#if feature_image}}
    <div class="article-image">
        <figure>
            <img
                srcset="{{img_url feature_image size="s"}} 300w,
                {{img_url feature_image size="m"}} 600w,
                {{img_url feature_image size="l"}} 1000w,
                {{img_url feature_image size="xl"}} 2000w"
                sizes="(max-width: 1000px) 400px, 700px"
                src="{{img_url feature_image size="m"}}"
                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
            />
        </figure>
    </div>
{{/if}}

<div class="post-card item">
    <div class="columns">
        <h2 class="item"><a href="">{{title}}</a></h2>      
        <time class="post-date item" datetime="{{date format='YYYY-MM-DD'}}">
            {{date format="DD.MM.YYYY"}}
        </time>
    </div>
    <hr />

    <div class="post-card-meta item">
        <ul class="author-list">
            {{#foreach authors}}
            <li class="author-list-item">
                {{#if profile_image}}
                <a href="{{url}}" class="static-avatar">
                    <img class="author-profile-image" src="{{img_url profile_image size="xs"}}" alt="{{name}}" loading="lazy" />
                </a>
                {{else}}
                <a href="{{url}}" class="static-avatar author-profile-image">{{> "icons/avatar"}}</a>
                {{/if}}
            </li>
            {{/foreach}}
        </ul>
        <div class="post-card-byline-content">
            <span class="post-card-byline-author">{{#has author="count:>2"}}Multiple authors{{else}}{{authors}}{{/has}}</span>
        </div>
    </div>
    <div class="inner-data">{{content}}</div>
        
    <section class="columns done">
        <strong>Tehty: </strong>
        <section>Ei tiedossa</section>
    </section>

    <div class="price">
        <hr />   
        <section><strong>Ilmainen</strong></section>
    </div>
</div>